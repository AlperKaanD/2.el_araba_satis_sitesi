@model IEnumerable<alperkaand_proje.Models.ilan_goster>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_indexLayout.cshtml";
}



<!-- Car Section Begin -->

<section class="car spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="car__sidebar">
                    <div class="car__search">
                        <div class="ss-content">
                            <ul class="category-section" style="list-style-type: none">
                                <li>
                                    <a href="@Url.Action("Index", "ilan_goster")" class="category-link">
                                        <span class="category-name">Tüm İlanlar</span>
                                    </a>

                                </li>
                                
                            </ul>
                            @{Html.RenderAction("kategori_doldur", "ilan_goster");}
                        </div>
                    </div>
               
                </div>
            </div>
            <div class="col-lg-9">
                <div class="car__filter__option">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <div class="car__filter__option__item">
                                <h4 style="text-align:center;">Vitrin</h4>

                            </div>
                        </div>

                    </div>
                </div>




                <div class="container">

                    <div class="row">
                        @foreach (var item in Model)
                        {

                            <div class="col-md-4">
                                <div class="car-wrap rounded ftco-animate">
                                    <div class="img rounded d-flex align-items-end">
                                        <img style="width: 100%; height: 220px;" src="~/images/@item.FotoURL" />
                                    </div>
                                    <div class="text">
                                        <h2 class="mb-0"><a href="@Url.Action("Details", "ilan_goster", new { id = item.ilan_no })" onclick="return GB_showCenter('Ilan Detay', this.href,)">@Html.DisplayFor(modelItem => item.tasit_modelleri.tas_model_ad)</a></h2>
                                        <div class="d-flex mb-3">
                                            <span class="cat">@Html.DisplayFor(modelItem => item.tasit_markalari.tas_marka_adi)</span>
                                            <p class="price ml-auto">@item.fiyat.ToString("N0") <span>₺</span></p>
                                        </div>
                                        <p class="d-flex mb-0 d-block"> <a href="@Url.Action("Details", "ilan_goster", new { id = item.ilan_no })" onclick="return GB_showCenter('Ilan Detay', this.href,)" class="btn btn-secondary py-2 ml-1">Detay</a></p>
                                    </div>
                                </div>
                            </div>

                        }

                    </div>

                </div>

            </div>

        </div>
    </div>
</section>
