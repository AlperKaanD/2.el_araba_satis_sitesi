
@model IEnumerable<alperkaand_proje.Models.ilan_goster>

<!-- DataTable -->
<section class="car spad">
    <div class="row">
        <div class="col-md-8">
            <table id="ilantablo" class="table table-bordered" style="width:100%">
                <thead>
                    <tr style="text-align:center;">
                        <th>Fotoğraf</th>
                        <th>Marka</th>
                        <th>Model</th>
                        <th>İlan Başlığı</th>
                        <th>Üretim Yılı</th>
                        <th>Km</th>
                        <th>Fiyat</th>
                        <th>İlan Tarihi</th>
                        <th>İl</th>
                        <th>İlçe</th>
                    </tr>

                </thead>
               
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr style="text-align:center;">


                            <td> <a href="@Url.Action("Details", "ilan_goster", new { id = item.ilan_no })" onclick="return GB_showCenter('Ilan Detay', this.href)"><img src="~/images/@item.FotoURL" alt="Ürün Resmi"></a></td>
                            <td>@Html.DisplayFor(modelItem => item.tasit_markalari.tas_marka_adi)</td>
                            <td>@Html.DisplayFor(modelItem => item.tasit_modelleri.tas_model_ad)</td>
                            <td>@Html.DisplayFor(modelItem => item.ilan_basligi)</td>
                            <td>@Html.DisplayFor(modelItem => item.uretim_yili.yillar)</td>
                            <td>@Html.DisplayFor(modelItem => item.km)</td>
                            <td style="color:red;">
                                @item.fiyat.ToString("N0")<span>TL</span>
                            </td>
                            <td>@item.ilan_tarihi.Date.ToShortDateString()</td>
                            <td>@Html.DisplayFor(modelItem => item.sehirler.sehir_adi)</td>
                            <td>@Html.DisplayFor(modelItem => item.ilceler.ilce_adi)</td>

                        </tr>

           }
                </tbody>
                
            </table>
        </div>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#ilantablo').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
            }

        });
    });
</script>

